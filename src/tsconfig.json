{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "../dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"@orm/*": ["lib/orm/*"],
			"@utils/*": ["lib/util/*"],
			"@lib/*": ["lib/*"],
			"@root/*": ["*"]
		},
		"composite": true,
		"declaration": true,
		"removeComments": true,
		"sourceMap": true,
		"inlineSources": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
	},
	"include": [".", "./languages/**/*.json"]
}
